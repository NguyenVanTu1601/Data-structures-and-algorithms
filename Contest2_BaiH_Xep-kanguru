#include<iostream>
#include<bits/stdc++.h>
using namespace std;
/*
Chia day kanguru lam 2 phan 
Kiem tra lan luot so sanh cÃ¡c phan tu dau day vs nua sau 
+ Neu thoa man thi duyet tiep tang vitri giua va gia tri day dau
+Khong thoa man thi vitri giua tang len 
*/
main(){
	int n;
	int t;
	cin >> t;
	while(t--){
		cin >> n;
	int a[n+1];
	for(int i = 1; i <= n; i++){
		cin >> a[i];
	}
	sort(a + 1,a + n + 1);
	
	int check[n+1];
	for(int i = 1; i <= n; i++){
		check[i] = 1;
	}
	int kanguru = n; 
	
	int vitri = n / 2 + 1;
	for(int i = 1; i <= n; i++){
		if(check[i] == 1 && vitri <= n){
			if(a[vitri] >= 2 * a[i] ){
				kanguru--;
				check[vitri] = 0;
				vitri++;
			}
			else {
				i--;
				vitri++;
			}
		}
	}
	cout << kanguru << endl;
	}
	

    return 0;
}
