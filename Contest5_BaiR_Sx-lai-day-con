#include<iostream>
#include<bits/stdc++.h>
using namespace std;

main(){
	int t;
	cin >> t;
	int n;
	while(t--){
		cin >> n;
		int a[n+1];
		int b[n+1];
		for(int i = 0; i < n; i++){
			cin >> a[i];
			b[i] = a[i];
		}
		
		sort(b, b+n);
		
		int dem = 0;
		int kt = 1;
		int vitridau;
		int vitricuoi;
		int max = 0;;
		for(int i = 0; i < n; i++){
			if(b[i] != a[i]){
				kt = 0;
				vitridau = i;
				break;
			}
		}
		
		if(kt == 1) cout << "YES" << endl;
		else {
			for(int i = n - 1; i >= 0; i--){
				if(b[i] != a[i]){
					vitricuoi = i;
					break;
				}
			}
			cout << vitricuoi - vitridau + 1<< endl;
		}
		
	}
    return 0;
}
